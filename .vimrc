set nocompatible

filetype off

set number
filetype plugin indent on
set autoindent
set smartindent
set tabstop=2
set shiftwidth=2
set expandtab
set encoding=utf-8

" Rendering
" set ttyfast
" set listchars=tab:▸\ ,eol:¬
" set list
syntax on

set hlsearch
set incsearch
set ignorecase
set smartcase
set showmatch

set showmode
set showcmd
set backspace=indent,eol,start

set visualbell
set t_vb=
